<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:elevation="2dp"
            android:adjustViewBounds="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_color">

        </View>


            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="220dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:padding="8dp"
                android:text="Wallstreet"
                android:textColor="@color/black"
                android:textSize="45dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/eventBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="@color/black"
                android:text="Event Body"
                android:textSize="22dp"
                android:layout_marginTop="54dp"
                android:layout_alignTop="@+id/eventTitle"
                android:layout_alignLeft="@+id/eventTitle"
                android:layout_alignStart="@+id/eventTitle"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/locImage"
                android:src="@drawable/location_icon"
                android:layout_below="@+id/eventBody"
                android:layout_alignLeft="@+id/eventBody"
                android:layout_alignStart="@+id/eventBody" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eventLocaion"
                android:text="location of event"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:layout_alignBottom="@+id/locImage"
                android:layout_toRightOf="@+id/locImage"
                android:layout_toEndOf="@+id/locImage" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_eventDetails"
                android:layout_marginBottom="24dp"
                android:background="@drawable/button_rounded_corner_event"
                android:layout_above="@+id/swipe_blog"
                android:layout_centerHorizontal="true"
                android:text="Register"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/swipe_blog"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="29dp"
                android:src="@drawable/down"
                android:tint="@color/dak_grey"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

</LinearLayout>