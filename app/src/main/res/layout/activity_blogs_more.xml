<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/blog_title"
        android:textSize="30dp"
        android:padding="8dp"
        android:text="blog title"
        android:textStyle="bold"
        android:textColor="#01579B"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blog_owner"
        android:padding="8dp"
        android:text="blog owner"
        android:textColor="#000000"
        android:layout_below="@+id/blog_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blog_date"
        android:padding="8dp"
        android:text="blog date"
        android:layout_below="@+id/blog_title"
        android:layout_toRightOf="@+id/blog_owner"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/blog_body"
        android:padding="8dp"
        android:textSize="19dp"
        android:text="blog body"
        android:textColor="#000000"
        android:layout_below="@+id/blog_owner"/>

</RelativeLayout>
