<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.iket.ecellapp2k17.sponsors.view.SponsEndPage_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bgSpons"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/progressBar_spons_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_centerHorizontal="true"
            style="@style/AVLoadingIndicatorView"
            android:visibility="visible"
            app:indicatorName="BallTrianglePathIndicator"
            app:indicatorColor="@color/white"
            />


        <ImageView
            android:id="@+id/down_arrow"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_down_arrow_2"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:layout_toStartOf="@+id/sponsImage"
            android:layout_marginTop="14dp" />



            <ImageView
                android:id="@+id/sponsImage"
                android:layout_width="260sp"
                android:layout_height="160dp"
                android:layout_marginTop="60dp"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/sponsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#B71C1C"
            android:textSize="40dp"
            android:layout_marginTop="110dp"
            android:layout_below="@+id/sponsImage"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/sponsDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:maxLines="3"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="25dp"
            android:layout_below="@+id/sponsTitle"
            android:layout_centerHorizontal="true" />



        <Button
            android:id="@+id/sponsButton"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_rounded_corner_spons"
            android:text="Visit Sponsor Website"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>