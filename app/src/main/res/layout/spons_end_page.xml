<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.iket.ecellapp2k17.sponsors.view.SponsEndPage_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/spons_endpage">

        <android.support.v7.widget.CardView
            android:id="@+id/imgCard"
            android:layout_width="270sp"
            android:layout_height="160sp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="17dp"
            app:cardPreventCornerOverlap="true"
            android:shadowColor="#000"
            android:shadowDx="250"
            android:shadowDy="100"
            android:shadowRadius="150"
            android:layout_above="@+id/sponsTitle"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/sponsImage"
                android:layout_width="269sp"
                android:layout_height="159sp"
                android:layout_alignEnd="@+id/imgCard"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/imgCard" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/sponsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#B71C1C"
            android:textSize="45sp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="31dp"
            android:layout_alignBottom="@+id/sponsDesc"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/sponsDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_above="@+id/sponsBody"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/sponsBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/sponsButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="68dp"
            android:text="Body"
            android:textColor="#000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/sponsButton"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_rounded_corner"
            android:text="Visit Sponsor Website"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>