<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:frisson="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >

    <com.intrusoft.library.FrissonView
        android:id="@+id/wave"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        frisson:tideCount="3"
        frisson:tideHeight="50dp"
        frisson:alphaValue="70"
        frisson:autoTint="false"
        />


    <android.support.v7.widget.CardView
        android:id="@+id/meta"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="120dp"
        frisson:cardCornerRadius="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/center_image"
            android:src="@drawable/default_fb_pic"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/user_name_fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/meta"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/meta"
        android:fontFamily="sans-serif-smallcaps"
        android:text="User Name"
        android:textColor="#ccffffff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/user_name_fb_etxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/meta"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/meta"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:hint="Enter your name"
        android:textColorHint="@color/white"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name_fb"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/meta"
        android:background="@drawable/border"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Log Out"
        android:textColor="#ccffffff" />

    <RelativeLayout
        android:id="@+id/llayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wave"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/email_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="26dp"
            android:drawableLeft="@drawable/ic_mail"
            android:drawablePadding="24dp"
            android:gravity="center"
            android:text="email.address@gmail.com"
            android:textColor="#880E4F" />
        <EditText
            android:id="@+id/email_fb_etxt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="26dp"
            android:drawableLeft="@drawable/ic_mail"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:textColor="#880E4F"
            android:hint="Enter Your Email"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/phone_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="26dp"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="24dp"
            android:layout_below="@+id/email_fb"
            android:gravity="center"
            android:text="Your phone number"
            android:textColor="#880E4F"
            />

        <EditText
            android:id="@+id/phone_etxt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="26dp"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="8dp"
            android:layout_below="@+id/email_fb_etxt"
            android:gravity="center"
            android:textColor="#880E4F"
            android:hint="Enter Your  number"
            android:visibility="gone"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llayout"
        frisson:cardElevation="10dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <EditText
        android:id="@+id/send_phone_etxt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter your phone no."
        />
            <EditText
                android:id="@+id/verify_otp_etxt"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:visibility="gone"
                android:hint="Enter your phone no."
                />
    <Button
        android:id="@+id/btn_send_otp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_phone_etxt"
        android:text="Send OTP"
        />
            <Button
                android:id="@+id/btn_verify_otp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/verify_otp_etxt"
                android:text="Verify OTP"
                android:visibility="gone"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/background_circle2"
        android:text="Edit"
        android:textColor="@color/white"
        android:padding="8dp"
        android:layout_below="@+id/llayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/btn_save"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="save changes"
        android:textColor="@color/white"
        android:background="@drawable/button_rounded_corner_event"
        android:layout_below="@+id/llayout"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/verify_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your no. has not been verified.Click here to verify OTP!"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:layout_alignStart="@+id/meta"
        android:layout_marginBottom="18dp" />

</RelativeLayout>
