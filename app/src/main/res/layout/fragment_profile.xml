<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_pic_bg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_fb_pic"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#95000000"/>

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/center_image"
            android:scaleType="centerCrop"
            android:src="@drawable/default_fb_pic"
            android:layout_above="@+id/llayout"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="78dp" />


    <TextView
        android:id="@+id/user_name_fb"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="User Name"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/center_image"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/user_name_fb_etxt"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:fontFamily="sans-serif-smallcaps"
       android:hint="Enter Your Name"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_alignTop="@+id/center_image"
        android:layout_alignParentEnd="true"/>



    <TextView
        android:id="@+id/log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Log Out"
        android:textColor="#ccffffff"

        android:layout_below="@+id/user_name_fb"
        android:layout_alignStart="@+id/user_name_fb"
        android:layout_marginTop="11dp" />

    <RelativeLayout
        android:id="@+id/llayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_pic_bg"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/email_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="26dp"
            android:drawableLeft="@drawable/ic_mail"
            android:drawablePadding="24dp"
            android:gravity="center"
            android:text="email.address@gmail.com"
            android:textColor="#880E4F" />
        <EditText
            android:id="@+id/email_fb_etxt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="26dp"
            android:drawableLeft="@drawable/ic_mail"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:textColor="#880E4F"
            android:hint="Enter Your Email"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/phone_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="26dp"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="24dp"
            android:layout_below="@+id/email_fb"
            android:gravity="center"
            android:text="Your phone number"
            android:textColor="#880E4F"
            />

        <EditText
            android:id="@+id/phone_etxt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="26dp"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="8dp"
            android:layout_below="@+id/email_fb_etxt"
            android:gravity="center"
            android:textColor="#880E4F"
            android:hint="Enter Your  number"
            android:visibility="gone"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llayout"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        app:cardElevation="20dp"
        app:contentPadding="2dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#9E9E9E"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <EditText
        android:id="@+id/send_phone_etxt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter your phone no."
        android:textColorHint="@color/white"
        />
            <EditText
                android:id="@+id/verify_otp_etxt"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:visibility="gone"
                android:textColorHint="@color/white"
                android:hint="Enter the OTP"
                />
    <Button
        android:id="@+id/btn_send_otp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_phone_etxt"
        android:backgroundTint="@color/darkgray"
        android:text="Send OTP"
        android:textColor="@color/white"
        />
            <Button
                android:id="@+id/btn_verify_otp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/verify_otp_etxt"
                android:text="Verify OTP"
                android:backgroundTint="@color/darkgray"
                android:textColor="@color/white"
                android:visibility="gone"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/background_circle2"
        android:text="Edit"
        android:textColor="@color/white"
        android:padding="8dp"
        android:layout_alignTop="@+id/llayout"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="23dp" />
    <Button
        android:id="@+id/btn_save"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="save changes"
        android:textColor="@color/white"
        android:background="@drawable/button_rounded_corner_event"
        android:layout_below="@+id/llayout"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/verify_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your no. has not been verified.Click here to verify OTP!"
       android:layout_below="@+id/llayout"
        android:layout_marginTop="110dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
       android:layout_marginLeft="8dp"
        android:layout_marginBottom="18dp" />

</RelativeLayout>

    </ScrollView>
</RelativeLayout>
