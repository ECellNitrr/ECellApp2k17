<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#212121"
             tools:context="com.example.iket.ecellapp2k17.about_us.view.TeamFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/faculty_research"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dean Research &amp; Consultancy "
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <View
            android:id="@+id/line_research"
            android:layout_width="290dp"
            android:layout_height="2sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/faculty_research"
            android:background="@color/white"
            />

        <ImageView
            android:id="@+id/faculty_researchImg"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/line_research"/>
        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/team_gradient"
            android:layout_below="@+id/line_research"
            android:layout_marginTop="20dp"/>
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/progressBar_faculty_research"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/line_research"
            android:layout_centerHorizontal="true"
            style="@style/AVLoadingIndicatorView"
            android:visibility="visible"
            app:indicatorName="BallTrianglePathIndicator"
            app:indicatorColor="@color/white"
            />
        <TextView
            android:id="@+id/facultyResearchName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/faculty_researchImg"
            android:text="DR. S. SANYAL"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="5dp"/>


        <TextView
            android:id="@+id/faculty"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Faculty Incharge"
            android:layout_below="@id/facultyResearchName"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <View
            android:id="@+id/line3"
            android:layout_width="290dp"
            android:layout_height="2sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/faculty"
            android:background="@color/white"
            />

        <ImageView
            android:id="@+id/facultyImg"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/line3"/>
        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/team_gradient"
            android:layout_below="@+id/line3"
            android:layout_marginTop="20dp"/>
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/progressBar_faculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/line3"
            android:layout_centerHorizontal="true"
            style="@style/AVLoadingIndicatorView"
            android:visibility="visible"
            app:indicatorName="BallTrianglePathIndicator"
            app:indicatorColor="@color/white"
            />

        <TextView
            android:id="@+id/facultyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facultyImg"
            android:text="DR. SUBHAS GANGULY"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/facultyDept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/facultyName"
            android:text="Faculty Incharge E-Cell NIT Raipur"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/Coordinators"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/facultyDept"
            android:text="Team Members"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerInParent="true"/>

        <View
            android:id="@+id/line4"
            android:layout_centerHorizontal="true"
            android:layout_width="270dp"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_below="@+id/Coordinators"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/team_progressbar"
            android:layout_below="@+id/line4"
            android:layout_centerInParent="true"
            />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_team"
        android:layout_below="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginTop="8dp">

    </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
    </ScrollView>
</FrameLayout>
