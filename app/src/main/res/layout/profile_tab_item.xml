<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:textColor="#f26b3c"
                android:layout_width="150sp"
                android:layout_height="20sp"
                android:layout_marginTop="10dp"
                android:text="Contact Number"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/call_icon"
                android:layout_alignTop="@+id/contact_number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:tint="#ff0000"/>


            <EditText
                android:id="@+id/contact_number"
                android:textColor="#515151"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="Users Contact No."
                android:layout_below="@+id/textView"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView" />

        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:textColor="#f26b3c"
                android:layout_width="150sp"
                android:layout_height="20sp"
                android:layout_marginTop="0dp"
                android:text="Roll Number"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2" />

            <EditText
                android:id="@+id/roll_number"
                android:textColor="#515151"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="Users Roll No."
                android:layout_below="@+id/textView2"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/hat_icon"
                android:layout_alignTop="@+id/roll_number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:tint="#ff0000"/>

        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#f26b3c"
                android:id="@+id/textView3"
                android:layout_width="150sp"
                android:layout_height="20sp"
                android:layout_marginTop="0dp"
                android:text="Location"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView3" />

            <EditText
                android:id="@+id/location"
                android:textColor="#515151"
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="Users Address"
                android:layout_below="@+id/textView3"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView3"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/location_icon"
                android:layout_alignTop="@+id/location"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:tint="#ff0000"/>

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>