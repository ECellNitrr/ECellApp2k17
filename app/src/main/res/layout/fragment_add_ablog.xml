<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/addBlog_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:foregroundGravity="center"
            android:adjustViewBounds="true"/>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
            android:id="@+id/addBlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="Add a Blog"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addBlog"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="93dp"
            android:layout_toLeftOf="@+id/addBlog"
            android:layout_toStartOf="@+id/addBlog"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/etxt_title"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_title"
            android:layout_alignStart="@+id/txt_title"
            android:layout_below="@+id/txt_title"
            android:ems="10"
            android:hint="Enter the title of your blog" />

        <TextView
            android:id="@+id/txt_blogType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etxt_title"
            android:layout_alignStart="@+id/etxt_title"
            android:layout_below="@+id/etxt_title"
            android:text="Type Of Blog"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/etxt_blogType"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_blogType"
            android:layout_alignStart="@+id/txt_blogType"
            android:layout_below="@+id/txt_blogType"
            android:ems="10"
            android:hint="Enter your type of blog" />

        <EditText
            android:id="@+id/etxt_blogBody"
            android:layout_width="278dp"
            android:layout_height="190dp"
            android:layout_alignLeft="@+id/etxt_blogType"
            android:layout_alignStart="@+id/etxt_blogType"
            android:layout_below="@+id/etxt_blogType"
            android:layout_marginTop="20dp"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:gravity="start"
            android:hint="Your Blog Goes here" />

        <Button
            android:id="@+id/insert_img"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:text="Insert Image"
            android:background="@drawable/insert_rounded_corner"
            android:textColor="@color/white"
            android:layout_below="@+id/etxt_blogBody"
            android:layout_alignRight="@+id/txt_blogType"
            android:layout_alignEnd="@+id/txt_blogType" />

        <Button
            android:id="@+id/post_blog"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:text="Post"
            android:background="@drawable/post_rounded_corner"
            android:textColor="@color/white"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_below="@+id/etxt_blogBody"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/insert_img"/>

        <ProgressBar
            android:id="@+id/progressBar_blogs"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_blogType"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="32dp"
            android:layout_toEndOf="@+id/txt_title"
            android:layout_toRightOf="@+id/txt_title"
            android:visibility="gone"/>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>