<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFA726">
    <TextView
        android:id="@+id/addBlog"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Add a Blog"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/blog_img"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/addBlog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>

        <EditText
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/write_blog"
        android:layout_marginTop="8dp"
        android:hint="Write Your Blog here.!"
        android:textAlignment="center"
        android:layout_below="@+id/blog_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/shape"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/insert_img"
        android:text="Insert your Image"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/write_blog"
        android:layout_centerHorizontal="true" />

    </RelativeLayout>


</FrameLayout>