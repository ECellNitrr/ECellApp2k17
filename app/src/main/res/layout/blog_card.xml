<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/blogTitle"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="BLOG TITLE"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp" />

    <EditText
        android:id="@+id/blogAuthor"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/blogTitle"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="AUTHOR" />

    <ImageView
        android:id="@+id/blogImage"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/blogTitle"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/blogDate"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="DATE"
        android:layout_alignBottom="@+id/blogAuthor"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/blog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/blogTitle"
        android:layout_alignRight="@+id/blogTitle"
        android:layout_below="@+id/blogImage"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="BLOG" />

</RelativeLayout>