<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="open_blog"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/blogCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="25dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="325sp"
                android:id="@+id/blog_image"/>

            <TextView
                android:id="@+id/blog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_below="@id/blog_image"
                android:text="blog title"
                android:textColor="#01579B"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/blog_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blog_title"
                android:padding="8dp"
                android:text="blog owner"
                android:textColor="#000000"
                android:layout_alignBottom="@+id/blog_date" />

            <TextView
                android:id="@+id/blog_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blog_title"
                android:layout_toRightOf="@+id/blog_owner"
                android:padding="8dp"
                android:text="blog date" />

            <TextView
                android:id="@+id/blog_body"
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:layout_below="@+id/blog_owner"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="19dp" />

            <ImageView
                android:id="@+id/swipe_blog"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/blog_body"
                android:src="@drawable/down"
                android:tint="@color/dak_grey" />

        </RelativeLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>
