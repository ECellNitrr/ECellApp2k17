<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#fffff9"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/blogImage"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blog_title"
            android:textSize="20dp"
            android:layout_below="@+id/blogImage"
            android:layout_margin="4dp"
            android:text="blog title"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blog_owner"
            android:layout_margin="4dp"
            android:text="blog owner"
            android:textColor="#000000"
            android:layout_below="@+id/blog_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blog_date"
            android:layout_margin="4dp"
            android:text="blog date"
            android:layout_below="@+id/blog_title"
            android:layout_toRightOf="@+id/blog_owner"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/blog_body"
            android:padding="4dp"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_below="@+id/blog_owner"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
