<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardBackgroundColor="@color/black"
        card_view:cardCornerRadius="25dp"
        card_view:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/member_img"
                android:layout_width="150dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/member_position"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/member_position"
                android:layout_marginTop="20dp"
                android:text="Samveg Thaker"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/member_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/member_name"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/member_img"
                android:layout_toRightOf="@+id/member_img"
                android:text="Executive Member"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/member_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="8962833132"
                android:textColor="#ffffff"
                android:layout_below="@+id/member_position"
                android:layout_alignLeft="@+id/member_position"
                android:layout_alignStart="@+id/member_position" />

            <TextView
                android:id="@+id/member_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="thakersamveg608@gmail.com"
                android:textColor="#ffffff"
                android:layout_below="@+id/member_contact"
                android:layout_alignLeft="@+id/member_contact"
                android:layout_alignStart="@+id/member_contact" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>