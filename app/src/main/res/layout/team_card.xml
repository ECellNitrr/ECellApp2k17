<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_margin="4dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#616161">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#212121">
            
            <ImageView
                android:id="@+id/coordinatorImg"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/team_gradient"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/coordinatorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coordinatorImg"
                android:text="coordinator name"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="16dp" />
            

            <TextView
                android:id="@+id/coordinatorEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coordinatorName"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16dp"
                />
            

            
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    
</LinearLayout>