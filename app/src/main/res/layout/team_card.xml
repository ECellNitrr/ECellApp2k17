<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_margin="4dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ImageView
                android:id="@+id/coordinatorImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/coordinatorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coordinatorImg"
                android:text="coordinator name"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="16dp" />
            
            <TextView
                android:id="@+id/coordinatorPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coordinatorName"
                android:text="coordinator post"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/coordinatorEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coordinatorPost"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16dp"
                />
            

            
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    
</LinearLayout>