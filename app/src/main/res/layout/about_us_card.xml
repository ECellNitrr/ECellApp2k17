<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="4">
        <ImageView
            android:id="@+id/vision_img"
            android:layout_width="80dip"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/team_img"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/past_work_img"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/contact_us_img"
            android:layout_width="80sp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="1"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/aboutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:text="about_us_title"
                android:textColor="#01579B"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/aboutBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aboutTitle"
                android:padding="8sp"
                android:text="about_us_body"
                android:textColor="#000000"
                android:textSize="25sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>