<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/spons_relative_layout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:elevation="1dp"
        android:id="@+id/spons_img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Sponsors"
            android:background="@drawable/rounded_curve"
            android:textSize="30dp"
            android:paddingLeft="35dp"
            android:layout_below="@+id/spons_img"
            android:id="@+id/sponsText"/>

        <TextView
            android:layout_width="3dp"
            android:layout_height="80dp"
            android:background="@color/dak_grey"
            android:layout_marginLeft="19dp"
            android:layout_above="@+id/recycler_view_spons"
            />

    <android.support.v7.widget.RecyclerView

        android:id="@+id/recycler_view_spons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sponsText"/>

    <ProgressBar
        android:id="@+id/progressBar_spons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sponsText"/>

    </RelativeLayout>

</ScrollView>
