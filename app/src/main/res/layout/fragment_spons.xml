<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iket.ecellapp2k17.sponsors.view.SponsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:id="@+id/spons_img"
        android:background="@drawable/layerlist"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Sponsors"
            android:textSize="30sp"
            android:paddingLeft="35sp"
            android:layout_below="@+id/spons_img"
            android:id="@+id/sponsText"/>

    <android.support.v7.widget.RecyclerView

        android:id="@+id/recycler_view_spons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20sp"
        android:paddingTop="15sp"
        android:scrollbars="vertical"
        android:layout_below="@+id/sponsText"/>

    <ProgressBar
        android:id="@+id/progressBar_spons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sponsText"/>
    </RelativeLayout>


</FrameLayout>
